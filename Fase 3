  <script>
    function validarCPF(input) {
      const regex = /^\d{3}\.\d{3}\.\d{3}-\d{2}$/;
      if (!regex.test(input.value)) {
        alert("CPF inválido! Use o formato 000.000.000-00.");
        input.focus();
      }
    }

    function validarEmail(input) {
      const regex = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;
      if (!regex.test(input.value)) {
        alert("E-mail inválido!");
        input.focus();
      }
    }

    function adicionarUC() {
      const novaUC = prompt("Digite o nome da nova UC:");
      if (novaUC) {
        const li = document.createElement("li");
        li.innerHTML = `${novaUC} <button onclick="mover(this, -1)">⬆️</button> <button onclick="mover(this, 1)">⬇️</button>`;
        document.getElementById("lista-ucs").appendChild(li);
      }
    }

    function mover(botao, direcao) {
      const li = botao.parentElement;
      const ul = li.parentElement;
      const index = Array.from(ul.children).indexOf(li);
      const novoIndex = index + direcao;

      if (novoIndex >= 0 && novoIndex < ul.children.length) {
        ul.insertBefore(li, ul.children[direcao > 0 ? novoIndex + 1 : novoIndex]);
      }
    }

    function adicionarInfo() {
      const campo = document.getElementById('nova-info');
      const valor = campo.value.trim();
      if (valor) {
        const li = document.createElement('li');
        li.textContent = valor;
        document.getElementById('mais-info').appendChild(li);
        campo.value = '';
      }
    }
  </script>
